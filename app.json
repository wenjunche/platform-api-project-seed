{
    "runtime": {
        "arguments": "--v=1 --inspect",
        "version": "stable"
    },
    "shortcut": {
        "company": "OpenFin",
        "description": "Platform app seed local",
        "icon": "https://openfin.github.io/golden-prototype/favicon.ico",
        "name": "Platform app seed local"
    },
    "platform": {
        "uuid": "platform_customization_local",
        "applicationIcon": "https://openfin.github.io/golden-prototype/favicon.ico",
        "autoShow": false,
        "providerUrl": "http://localhost:5555/provider.html",
        "permissions": {
            "ExternalWindow": {
              	"wrap": true
            },
            "System": {
                "getAllExternalWindows": true,
                "launchExternalProcess": true,
                "readRegistryValue": false,
                "terminateExternalProcess": true
            }
        },
        "defaultWindowOptions": {
            "url": "http://localhost:5555/platform-window.html",
            "contextMenuSettings": {
                "reload": false,
                "devtools": false,
                "enable": false
            },
            "defaultWidth": 900,
            "defaultHeight": 720,
            "defaultLeft": 0,
            "defaultTop": 0,
            "saveWindowState": false,
            "backgroundThrottling": true,
            "minHeight": 445,
            "minWidth": 354,
            "contextMenuSettings": {
                "enable": true,
                "devtools": true,
                "reload": true
              }
        },
        "defaultViewOptions": {
        },
        "commands": [
            {
                "command": "stack.nextTab",
                "keys": "Ctrl+Tab"
            }
        ]
    },
    "snapshot": {
        "windows": [
            {
                "name": "Seed Window",
                "layout": {
                    "content": [
                        {
                            "type": "stack",
                            "id": "timer-1",
                            "content": [
                                {
                                    "type": "component",
                                    "componentName": "view",
                                    "componentState": {
                                        "name": "backgroundThrottling_view",
                                        "processAffinity": "ps_1",
                                        "backgroundThrottling": true,
                                        "url": "http://localhost:5555/timer.html"
                                    }
                                },
                                {
                                    "type": "component",
                                    "componentName": "view",
                                    "componentState": {
                                        "name": "not_backgroundThrottling_view",
                                        "processAffinity": "ps_1",
                                        "backgroundThrottling": false,
                                        "url": "http://localhost:5555/timer.html"
                                    }
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "name": "Seed Window 2",
                "layout": {
                    "content": [
                        {
                            "type": "stack",
                            "id": "no-drop-target",
                            "content": [
                                {
                                    "type": "component",
                                    "componentName": "view",
                                    "componentState": {
                                        "processAffinity": "ps_2",
                                        "url": "http://localhost:5555/throttleProvider.html"
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
